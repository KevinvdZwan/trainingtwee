{% extends 'base.html.twig' %}

{% block title %}Person index{% endblock %}

{% block body %}
    <h1>Person index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Preprovision</th>
                <th>Lastname</th>
                <th>Dateofbirth</th>
                <th>Gender</th>
                <th>Emailadress</th>
                <th>Hiring_date</th>
                <th>Salary</th>
                <th>Street</th>
                <th>Postal_code</th>
                <th>Place</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.firstname }}</td>
                <td>{{ person.preprovision }}</td>
                <td>{{ person.lastname }}</td>
                <td>{{ person.dateofbirth ? person.dateofbirth|date('d-m-Y') : '' }}</td>
                <td>{{ person.gender }}</td>
                <td>{{ person.emailadress }}</td>
                <td>{{ person.salary }}</td>
                <td>{{ person.street }}</td>
                <td>{{ person.postalCode }}</td>
                <td>{{ person.place }}</td>


                <td>
                    <a href="{{ path('person_show', {'id': person.id}) }}">show</a>
                    <a href="{{ path('person_edit', {'id': person.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('person_new') }}">Create new</a>
{% endblock %}
